@model IEnumerable<dummy.Library.Entity.Models.TestModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-controller="Dummy" asp-action="CreateUser">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                <a asp-controller="Dummy" asp-action="UserDetail" asp-route-id=@item.Id class="btn btn-primary">Detail</a>
                <a asp-controller="Dummy" asp-action="UpdateUser" asp-route-id=@item.Id class="btn btn-info">Update</a>
                <a asp-controller="Dummy" asp-action="DeleteUser" asp-route-id=@item.Id class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
